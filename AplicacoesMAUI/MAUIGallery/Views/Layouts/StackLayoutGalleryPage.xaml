<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIGallery.Views.Layouts.StackLayoutGalleryPage"
             Title="StackLayoutGalleryPage">
    <StackLayout Orientation="Vertical" Spacing="10" BackgroundColor="Bisque">
        <Button Text="Botão 1" HorizontalOptions="Start"/>
        <Button Text="Botão 2" HorizontalOptions="Center"/>
        <Button Text="Botão 3" HorizontalOptions="End"/>
        <Button Text="Botão 4" HorizontalOptions="Fill"/>


        <StackLayout Orientation="Horizontal"  BackgroundColor="Maroon" Padding="10">
            <Button Text="Botão 5" HeightRequest="50"/>
            <Button Text="Botão 6" WidthRequest="200" HeightRequest="100" />
        </StackLayout>
    </StackLayout>
</ContentPage>